<Window x:Class="WpfApp.OvertimeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overtime" Height="200" Width="300">
    <Grid>
        <Label Content="Enter Overtime Hours:" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtOvertime" HorizontalAlignment="Left" Margin="150,20,0,0" VerticalAlignment="Top" Width="100" />
        <Button Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="100,60,0,0" Click="OKButton_Click"/>
    </Grid>
</Window>
