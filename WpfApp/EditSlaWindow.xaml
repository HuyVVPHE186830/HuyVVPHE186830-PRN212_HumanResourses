<Window x:Class="WpfApp.EditSlaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chỉnh Sửa Lương" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Nhân viên:"/>
            <TextBlock x:Name="EmployeeNameTextBlock" FontWeight="Bold" Margin="0,5,0,10"/>

            <TextBlock Text="Lương Cơ Bản:"/>
            <TextBox x:Name="BaseSalaryTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Phụ Cấp:"/>
            <TextBox x:Name="AllowanceTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Thưởng:"/>
            <TextBox x:Name="BonusTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Phạt:"/>
            <TextBox x:Name="PenaltyTextBox" Margin="0,5,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Lưu" Click="SaveButton_Click" Margin="5"/>
                <Button Content="Hủy" Click="CancelButton_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
