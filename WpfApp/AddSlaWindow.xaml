<Window x:Class="WpfApp.AddSlaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm/Chỉnh Sửa Lương" Height="317" Width="416">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Employee"/>
            <TextBlock x:Name="EmployeeNameTextBlock" Margin="0,5,0,10" FontWeight="Bold"/>

            <TextBlock Text="Base Salary"/>
            <TextBox x:Name="BaseSalaryTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Allowance"/>
            <TextBox x:Name="AllowanceTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Bonus"/>
            <TextBox x:Name="BonusTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Penalty"/>
            <TextBox x:Name="PenaltyTextBox" Margin="0,5,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Click="SaveButton_Click" Margin="5" Width="80" Background="green" Foreground="white"/>
                <Button Content="Cancel" Click="CancelButton_Click" Margin="5" Foreground="white" Width="52" Background="#FFE50000"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>